apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: my-app-application
  namespace: argocd
spec:
  destination:
    namespace: oyinda
    server: https://kubernetes.default.svc
  project: my-app-project
  source:
    directory:
      recurse: true
    path: env/default
    targetRevision: main
    repoURL: https://github.com/sucre4me/argocd-demo
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=true
